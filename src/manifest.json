{
  "manifest_version": 3,
  "name": "F95Zone Game Watchlist Manager",
  "version": "1.0.0",
  "description": "Adds buttons to manage game watchlist on F95Zone threads",
  "default_locale": "en",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://f95zone.to/*",
    "https://bot.infinitecanvas.io/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://f95zone.to/threads/*"],
      "js": ["build/content.js"],
      "css": ["build/content.css"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
